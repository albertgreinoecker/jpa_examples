<?xml version="1.0" encoding="UTF-8"?>
<persistence
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
	version="2.0" xmlns="http://java.sun.com/xml/ns/persistence">

	<persistence-unit name="uni"
		transaction-type="RESOURCE_LOCAL">
		<provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>

		<!-- Entweder ALLE Entity KLassen hier aufzÃ¤hlen oder exclude-unlisted-classes 
			auf false, dann werden alle @Entity-Klassen aufgenommen <class>at.ac.htlinn.jpa.uni.Student</class> 
			<class>at.ac.htlinn.jpa.uni.Professor</class> <class>at.ac.htlinn.jpa.uni.Assistent</class> -->
		<exclude-unlisted-classes>false</exclude-unlisted-classes>
		<properties>
			<!-- JDBC Connection Info -->
			<!-- 
			<property name="javax.persistence.jdbc.driver"
				value="com.mysql.cj.jdbc.Driver" />
			<property name="javax.persistence.jdbc.url"
				value="jdbc:mysql://localhost/uni_jpa?useUnicode=true&amp;useJDBCCompliantTimezoneShift=true&amp;useLegacyDatetimeCode=false&amp;serverTimezone=UTC" />
			 -->
			<property name="javax.persistence.jdbc.driver" value="org.sqlite.JDBC"/>
            <property name="javax.persistence.jdbc.url" value="jdbc:sqlite:database.db"/>
 
			
			
			<property name="javax.persistence.jdbc.user" value="root" />
			<property name="javax.persistence.jdbc.password"
				value="root" />

			<property name="eclipselink.ddl-generation"
				value="drop-and-create-tables" />
			<!-- Werte: create-tables, create-or-extend-tables, drop-and-create-tables, 
				none -->
				
			<property name="eclipselink.logging.level" value="SEVERE" />
			<!-- Werte: SEVERE FINE, WARNING, INFO, CONFIG, FINER, FINEST, OFF -->
		</properties>
	</persistence-unit>
</persistence>